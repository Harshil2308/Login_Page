<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <TextView
        android:layout_marginTop="@dimen/_40sdp"
        android:id="@+id/title"
        android:textColor="@color/blue"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/_20sdp"
        android:text="Welcome to the dashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_centerInParent="true"
        android:id="@+id/dashboard_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginTop="@dimen/_48sdp"
        android:text="name"
        android:textSize="@dimen/_20sdp"/>

    <TextView
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_below="@+id/dashboard_name"
        android:id="@+id/dashboard_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="@dimen/_20sdp"/>
    <Button
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_below="@+id/dashboard_email"
        android:textSize="@dimen/_20sdp"
        android:text="Logout"
        android:id="@+id/dashboard_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_marginTop="@dimen/_40sdp"
        android:textSize="@dimen/_20sdp"
        android:text="Delete your Account"
        android:layout_below="@+id/dashboard_logout"
        android:id="@+id/dashboard_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>